<?xml version="1.0" encoding="utf-8" ?>
<ContentPage xmlns="http://schemas.microsoft.com/dotnet/2021/maui"
             xmlns:x="http://schemas.microsoft.com/winfx/2009/xaml"
             xmlns:viewModel="clr-namespace:StockDemo.Sources.ViewModel"
             x:Class="StockDemo.Sources.View.MainPage"
             Title="{Binding Title}"
             BackgroundColor="LightGoldenrodYellow">
    <Grid ColumnSpacing="5" RowSpacing="5" Margin="20" BackgroundColor="LightGoldenrodYellow">
        <Grid.RowDefinitions>
            <RowDefinition Height="Auto"/>
            <RowDefinition Height="Auto"/>
            <RowDefinition/>
            <RowDefinition Height="Auto"/>
        </Grid.RowDefinitions>
        <Grid.ColumnDefinitions>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
            <ColumnDefinition/>
        </Grid.ColumnDefinitions>
        
        <!-- Dung change -->
        <StackLayout Grid.Row="0" Grid.ColumnSpan="4" Orientation="Horizontal" HorizontalOptions="Center">
            <Button Text="IBM" />
            <Button Text="AAPL" />
            <Button Text="MSFT" />
            <Button Text="TSLA" />
            <Button Text="GM" />
        </StackLayout>

        <!-- Column Headers -->
        <Label Grid.Row="1" Grid.Column="0" Text="Symbol" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="1" Text="High" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="2" Text="Low" FontAttributes="Bold" HorizontalOptions="Center" />
        <Label Grid.Row="1" Grid.Column="3" Text="Close" FontAttributes="Bold" HorizontalOptions="Center" />

        <!-- Collection View -->
        <CollectionView Grid.Row="2" Grid.ColumnSpan="4" ItemsSource="{Binding Stocks}" SelectionMode="None">
            <CollectionView.ItemTemplate>
                <DataTemplate>
                    <Grid>
                        <Grid.RowDefinitions>
                            <RowDefinition/>
                        </Grid.RowDefinitions>
                        <Grid.ColumnDefinitions>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                            <ColumnDefinition/>
                        </Grid.ColumnDefinitions>
                        <Button Grid.Row="0" Grid.Column="0" Text="{Binding MetaData.Symbol}">
                            <Button.GestureRecognizers>
                                <TapGestureRecognizer CommandParameter="{Binding .}" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:StocksViewModel}}, Path=GoToDetailCommand}" />
                            </Button.GestureRecognizers>
                        </Button>
                        <Label Grid.Row="0" Grid.Column="1" Text="{Binding TimeSeries[0].High}" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Label Grid.Row="0" Grid.Column="2" Text="{Binding TimeSeries[0].Low}" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Label Grid.Row="0" Grid.Column="3" Text="{Binding TimeSeries[0].Close}" HorizontalOptions="Center" VerticalOptions="Center" />
                        <Grid.GestureRecognizers>
                            <TapGestureRecognizer CommandParameter="{Binding .}" Command="{Binding Source={RelativeSource AncestorType={x:Type viewModel:StocksViewModel}}, Path=GoToDetailCommand}" />
                        </Grid.GestureRecognizers>
                    </Grid>
                </DataTemplate>
            </CollectionView.ItemTemplate>
        </CollectionView>

        <!-- Activity Indicator -->
        <ActivityIndicator Grid.Row="2" Grid.RowSpan="2" Grid.ColumnSpan="4" IsVisible="{Binding IsBusy}" IsRunning="{Binding IsBusy}" HorizontalOptions="FillAndExpand" VerticalOptions="CenterAndExpand" />
    </Grid>
</ContentPage>
